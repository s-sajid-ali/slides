\mode<presentation>

\definecolor{anlgreen}{RGB}{122, 184, 0}
\definecolor{anlviolet}{RGB}{91, 0, 145}
\definecolor{anlblue}{RGB}{0, 96, 156}
\definecolor{anlred}{RGB}{205, 32, 44}
\definecolor{anlteal}{RGB}{0, 161, 156}
\definecolor{anlyellow}{RGB}{248, 178, 0}
\definecolor{anlprocessblue}{RGB}{0, 130, 202}
\definecolor{anlorange}{RGB}{255, 121, 0}
\definecolor{anlgray}{RGB}{102, 102, 102}
\definecolor{darkgray}{gray}{0.25}

\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{title page subheader}{fg=darkgray}

\setbeamercolor*{author}{fg=darkgray}
\setbeamercolor*{date}{fg=darkgray}

\setbeamercolor*{frametitle}{fg=darkgray}
\setbeamercolor*{framesubtitle}{fg=darkgray}

\setbeamercolor{pagenums}{fg=black!30}

\setbeamercolor{local structure}{parent=normal text}
% Change the color for items inside text blocks
% \addtobeamertemplate{block begin}{\setbeamercolor{local structure}{parent=structure}}{}
\addtobeamertemplate{block begin}{\setbeamercolor{local structure}{use=structure,parent=structure}}{}

\setbeamercolor{normal text}{fg=darkgray}
\setbeamercolor{example text}{fg=anlgreen}
\setbeamercolor{alerted text}{fg=anlred}

\setbeamercolor{block title}{use=structure,fg=white,bg=anlblue}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!10!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!10!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}


\mode<all>
